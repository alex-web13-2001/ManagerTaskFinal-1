# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/taskmanager?schema=public"

# JWT Secret (generate a secure random string for production)
JWT_SECRET="your-secret-key-change-this-in-production"

# Admin user for seeding (used by prisma/seed.ts)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"
ADMIN_NAME="Admin User"

# API Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration (used by Vite)
# For development: http://localhost:3001
# For production: Create .env.production with your domain (e.g., https://kanban.24task.ru)
# WebSocket will automatically use ws:// or wss:// based on http:// or https://
VITE_API_BASE_URL="http://localhost:3001"

# Email Configuration (SMTP)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="Task Manager"

# Application URLs (for email links and frontend)
FRONTEND_URL="http://localhost:5173"
APP_URL="http://localhost:5173"  # Deprecated, use FRONTEND_URL

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your-telegram-bot-token-here"
