// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - stores user authentication and profile data
model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  password              String    // bcrypt hashed
  name                  String
  avatarUrl             String?
  emailVerified         Boolean   @default(false)
  emailVerificationToken String?
  resetPasswordToken    String?
  resetPasswordExpires  DateTime?
  
  // Telegram integration fields
  telegramChatId        String?   @unique  // Telegram Chat ID for sending messages
  telegramUsername      String?            // Username in Telegram
  telegramLinkedAt      DateTime?          // When the account was linked
  
  // Tags dictionary for personal tasks
  personalTags          String[]  @default([]) // Personal tags dictionary
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // Relations
  ownedProjects         Project[] @relation("ProjectOwner")
  projectMemberships    ProjectMember[]
  createdTasks          Task[]    @relation("TaskCreator")
  assignedTasks         Task[]    @relation("TaskAssignee")
  receivedInvitations   Invitation[]
  customColumns         CustomColumn[]
  categories            Category[]
  telegramLinkToken     TelegramLinkToken?
  comments              Comment[]
  taskHistory           TaskHistory[]
  taskSubscriptions     TaskSubscriber[]
  ownedBoards           Board[]   @relation("BoardOwner")
  boardMemberships      BoardMember[]

  @@map("users")
}

// Project model
model Project {
  id                  String    @id @default(uuid())
  name                String
  description         String?
  color               String    @default("#3b82f6")
  icon                String?
  archived            Boolean   @default(false)
  links               Json?     @default("[]") // FIX Problem #4: Store project links as JSON array of objects
  availableCategories String[]  @default([]) // FIX Problem #5: Store available category IDs for this project
  attachments         Json?     @default("[]") // Store project file attachments as JSON array
  tags                String[]  @default([]) // Project tags dictionary
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  // Relations
  ownerId     String
  owner       User      @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     ProjectMember[]
  tasks       Task[]
  invitations Invitation[]

  @@map("projects")
}

// ProjectMember model - stores user roles in projects
model ProjectMember {
  id        String   @id @default(uuid())
  role      String   // 'owner', 'collaborator', 'member', 'viewer'
  addedAt   DateTime @default(now())
  
  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@map("project_members")
}

// Invitation model - stores project invitations
model Invitation {
  id          String   @id @default(uuid())
  email       String
  role        String   // 'collaborator', 'member', 'viewer'
  token       String   @unique
  status      String   @default("pending") // 'pending', 'accepted', 'expired', 'revoked'
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  acceptedAt  DateTime?
  
  // Relations
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  invitedByUserId String?
  invitedByUser   User?    @relation(fields: [invitedByUserId], references: [id], onDelete: SetNull)

  @@index([token])
  @@index([email])
  @@map("invitations")
}

// Task model
model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  status      String    @default("todo") // 'todo', 'in_progress', 'done'
  priority    String    @default("medium") // 'low', 'medium', 'high'
  category    String?
  tags        String[]  @default([])
  dueDate     DateTime?
  orderKey    String?   @default("n") // Лексикографический ключ для сортировки (Base36)
  version     Int       @default(1) // Монотонный счетчик для оптимистичной конкурентности
  
  // Recurring task fields
  isRecurring      Boolean   @default(false) // Is this a recurring task?
  recurrencePattern String?  // 'daily', 'weekly', 'monthly', 'yearly'
  lastCompleted    DateTime? // When the task was last marked as completed
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  projectId   String?
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creatorId   String
  creator     User      @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  assigneeId  String?
  assignee    User?     @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  attachments Attachment[] // Связь с вложениями через отдельную таблицу
  comments    Comment[]
  history     TaskHistory[]
  subscribers TaskSubscriber[]


  @@index([projectId])
  @@index([creatorId])
  @@index([assigneeId])
  @@index([status, orderKey]) // Индекс для быстрой сортировки по колонкам
  @@index([isRecurring, status]) // Индекс для поиска завершенных повторяющихся задач
  @@map("tasks")
}

// Attachment model - stores file attachments for tasks
model Attachment {
  id        String   @id @default(uuid())
  name      String   // Имя файла для отображения
  url       String   // Путь к файлу на сервере
  size      Int      // Размер в байтах
  mimeType  String   // MIME тип файла
  createdAt DateTime @default(now())

  // Связь с задачей (удаляется каскадно при удалении задачи)
  // Связь с задачей (удаляется каскадно при удалении задачи)
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  // Связь с комментарием
  commentId String?
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([commentId])
  @@map("attachments")
}

// KvStore model - simple key-value store for application data
// Replaces Supabase kv_store functionality
model KvStore {
  key       String   @id
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("kv_store")
}

// CustomColumn model - stores user-defined status columns for Kanban board
model CustomColumn {
  id        String   @id @default(uuid())
  name      String
  color     String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("custom_columns")
}

// Category model - stores task categories for organization
model Category {
  id        String   @id @default(uuid())
  name      String
  color     String   @default("#3b82f6")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId])
  @@map("categories")
}

// TelegramLinkToken model - stores temporary tokens for linking Telegram accounts
model TelegramLinkToken {
  id          String   @id @default(uuid())
  token       String   @unique  // Unique code for linking (format: LINK-ABC123)
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt   DateTime // Expires after 15 minutes
  createdAt   DateTime @default(now())
  
  @@index([token])
  @@map("telegram_link_tokens")
}

// Comment model - stores comments on tasks
model Comment {
  id              String   @id @default(uuid())
  text            String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  taskId          String
  task            Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdBy       String
  user            User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  
  mentionedUsers  String[] @default([])
  attachments     Attachment[]

  
  @@index([taskId])
  @@index([createdBy])
  @@map("comments")
}

// TaskHistory model - stores task change history
model TaskHistory {
  id        String             @id @default(cuid())
  taskId    String
  task      Task               @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User               @relation(fields: [userId], references: [id])
  
  action    TaskHistoryAction
  field     String?
  oldValue  Json?
  newValue  Json?
  metadata  Json?
  
  createdAt DateTime           @default(now())
  
  @@index([taskId])
  @@index([createdAt])
  @@map("task_history")
}

enum TaskHistoryAction {
  CREATED              // Task creation
  UPDATED              // General update (title, description)
  STATUS_CHANGED       // Status change
  ASSIGNED             // Assignee assigned
  UNASSIGNED           // Assignee removed
  PRIORITY_CHANGED     // Priority change
  DEADLINE_SET         // Deadline set
  DEADLINE_CHANGED     // Deadline changed
  DEADLINE_REMOVED     // Deadline removed
  PROJECT_CHANGED      // Moved to another project
  CATEGORY_CHANGED     // Category changed
  COMMENT_ADDED        // Comment added
}

// TaskSubscriber model - stores task subscriptions for comment notifications
model TaskSubscriber {
  id        String   @id @default(uuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([taskId, userId])
  @@index([taskId])
  @@map("task_subscribers")
}

// TelegramPendingReply model - stores pending reply states for Telegram bot
model TelegramPendingReply {
  id              String   @id @default(uuid())
  userId          String
  chatId          String
  taskId          String
  parentCommentId String
  createdAt       DateTime @default(now())
  
  @@index([chatId])
  @@index([userId])
  @@map("telegram_pending_replies")
}

// Board model - свободное пространство для заметок и медиа
model Board {
  id          String   @id @default(uuid())
  name        String
  description String?
  color       String   @default("#3b82f6")
  thumbnail   String?  // URL превью доски
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Владелец доски
  ownerId     String
  owner       User     @relation("BoardOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  // Элементы на доске
  elements    BoardElement[]
  
  // Будущее: участники доски
  members     BoardMember[]

  @@index([ownerId])
  @@map("boards")
}

// BoardElement - элемент на доске (заметка, фото, заголовок, текст)
model BoardElement {
  id        String   @id @default(uuid())
  type      String   // 'note' | 'image' | 'heading' | 'text' | 'video'
  
  // Позиция на канвасе
  positionX Float    @default(0)
  positionY Float    @default(0)
  width     Float    @default(200)
  height    Float    @default(150)
  zIndex    Int      @default(0)
  rotation  Float    @default(0)
  
  // Контент (зависит от типа)
  content   String?  // Текст для note/heading/text
  imageUrl  String?  // URL изображения для image
  color     String?  // Цвет фона для note
  fontSize  Int?     // Размер шрифта
  
  // Video fields
  videoUrl    String?
  videoType   String?  // 'youtube' | 'vimeo'
  displayMode String?  // 'embed' | 'preview'
  videoMeta   Json?    // { title, thumbnail, description, author }
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Связь с доской
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId])
  @@map("board_elements")
}

// BoardMember - участники доски (для будущего функционала приглашений)
model BoardMember {
  id        String   @id @default(uuid())
  role      String   // 'owner', 'editor', 'viewer'
  addedAt   DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([userId, boardId])
  @@map("board_members")
}
